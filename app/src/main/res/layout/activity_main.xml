<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="80dp"
        android:src="@drawable/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_menu_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin"
        android:background="@drawable/menu_cliente"
        app:layout_constraintLeft_toLeftOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_menu_empresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin"
        android:background="@drawable/menu_empresa"
        app:layout_constraintRight_toRightOf="@id/logo"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_menu_servico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin"
        android:background="@drawable/menu_servico"
        app:layout_constraintLeft_toLeftOf="@id/bt_menu_cliente"
        app:layout_constraintTop_toBottomOf="@id/bt_menu_cliente" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_menu_contato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin"
        android:background="@drawable/menu_contato"
        app:layout_constraintRight_toRightOf="@id/bt_menu_empresa"
        app:layout_constraintTop_toBottomOf="@+id/bt_menu_empresa" />

</androidx.constraintlayout.widget.ConstraintLayout>
