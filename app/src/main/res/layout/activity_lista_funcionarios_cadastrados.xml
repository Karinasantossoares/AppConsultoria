<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaFuncionariosActivity"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_empresa_cadastrada"
        android:layout_width="131dp"
        android:layout_height="96dp"
        android:src="@drawable/detalhe_funcionario"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title_produto_cadastrado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/funcionarios_cadastrados"
        app:layout_constraintTop_toTopOf="@id/iv_empresa_cadastrada"
        app:layout_constraintBottom_toBottomOf="@id/iv_empresa_cadastrada"
        android:layout_marginLeft="160dp"
        android:textSize="20sp"
        android:textColor="@color/dark"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_nome_peoduto_cadastrada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_empresa_cadastrada"
        android:layout_marginVertical="50dp"
        android:textSize="@dimen/tamanho_fonte"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:textColor="@color/dark"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_visualizar_nome_funcionarioo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_empresa_cadastrada"
        android:layout_marginVertical="50dp"
        android:textSize="@dimen/tamanho_fonte"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:textColor="@color/dark"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_visualizar_funcao_funcionario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_visualizar_nome_funcionarioo"
        android:layout_marginVertical="50dp"
        android:textSize="@dimen/tamanho_fonte"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:textColor="@color/dark"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_visualizar_id_funcionario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_visualizar_funcao_funcionario"
        android:layout_marginVertical="50dp"

        android:textSize="@dimen/tamanho_fonte"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:textColor="@color/dark"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_voltar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_visualizar_id_funcionario"
        android:layout_margin="50dp"
        android:text="@string/voltar"/>





</androidx.constraintlayout.widget.ConstraintLayout>